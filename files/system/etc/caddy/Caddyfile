{
	# Global Options
	admin localhost:2019
	
	# Logging
	log {
		output file /var/log/caddy/access.log {
			roll_size 100mb
			roll_keep 5
		}
		format console
	}
}

# System-wide configurations (immutable, from BlueBuild image)
import /etc/caddy/conf.d/*.caddy

# User configurations (mutable, from dotfiles)
# Path is set via $CADDY_USER_CONFIG environment variable
import {$CADDY_USER_CONFIG}/*.caddy

# Fallback: Default landing page if no user configs exist yet
# This handles first-boot before chezmoi has deployed configs
:80 {
	respond `<!DOCTYPE html>
<html lang="en">
